                <li><a href="/landlord">Dashboard</a></li>
                <li><a href="/workorders" class="active">View All Work Orders</a></li>
                <li><a href="/viewallapartments">View All Apartments</a></li>
                <li><a href="/landlordAllTenants">View All Tenants</a></li>
                <li><a href="/landlordCreateApt">Create An Apartment</a></li>
                <li><a href="/landlordassignApt">Assign Apartment to Tenant</a></li>
                <li><a href="/payments">View Apartments Payments</a></li>
                <li><a href="/logout" class="logout">Log Out</a></li>
            </ul>
  </div>
  <div class="searching">
    <form id="searchPay" action="/workorders" method="GET">
    <label for="aptNum">Search by Apartment Number:</label>
    <input type="text" id="aptNum" name="aptNum" placeholder="Apartment Number">
    <input type="submit" value="Search">
    </form>
  </div>
  <div class="infosp">
    {{#if work.length}}
    <ul>
      {{#each work}}
        <li>
        {{!-- <p>Apartment Number: {{aptNumber}}</p> --}}
        <div class="workEditInfo">
          <p>Apartment Number: {{AptNum}}</p>
          <p>Work Type: {{workType}}</p>
          <p>Status: {{workStatus}}</p>
          <p>Notes: {{notes}}</p>
          <p>Date Opened: {{dateOpened}}</p>
          <p>Date Closed: {{dateClosed}}</p>
          <p class="comments">Comments: 
            {{#if comments}}
              {{#each comments}}
              <br>{{this.[0]}} {{this.[2]}}:<br>{{this.[1]}}<br>
              {{/each}}
            {{else}}
              <br>None
            {{/if}}
          </p>
        </div>
        <div class="workEditEdit hidden">
          <form action="/workorders" method="post" class="new-workOrder-form">
            <p>Apartment Number: {{AptNum}}</p>
            <p>Work Type: {{workType}}</p>
            <input type="hidden" name="id" value={{workId}}>
            <label>Status: <select name="workStatus">
                <option value="Open">Open</option>
                <option value="Closed">Closed</option>
            </select></label>
               

            <label>Notes: <input type="text" name="notes" value="{{notes}}"></label>
            

            <label>Add Comment (not required): <input type="text" name="comment" placeholder="Write comment here..."></label>
            
          </form>
        </div>
        {{#if dateClosed}}
        {{else}}
        <button type='submit' class="edit-button">Edit</button>
        <button type="submit" class="end-button hidden">Save</button>
        {{/if}}
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No Work Orders found.</p>
  {{/if}}
  </div>
{{!-- </main> --}}

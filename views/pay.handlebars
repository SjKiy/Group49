<body>
    <h1>{{title}}</h1>
    <main>
        <div class="nav">
            <ul>
                <li><a href="/landlord" class="active">Dashboard</a></li>
                <li><a href="/workorders">View Work Orders</a></li>
                <li><a href="/payments">View Payments</a></li>
                <li><a href="/apartments">Manage Apartments</a></li>
                <li><a href="/logout" class="logout">Log Out</a></li>
            </ul>
        </div>
        <div class="infos">
            <form action="/pay" id="payment-form" method="POST">
                <h3>Payment</h3>
                <label for="cname">Name on Card</label>
                <input type="text" id="cname" name="cardname" placeholder="John More Doe"/>
                <label for="ccnum">Credit card number</label>
                <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444"/>
                <label for="expmonth">Exp Month</label>
                <input type="text" id="expmonth" name="expmonth" placeholder="September"/>
                <label for="expyear">Exp Year</label>
                <input type="text" id="expyear" name="expyear" placeholder="2018"/>
                <label for="cvv">CVV</label>
                <input type="text" id="cvv" name="cvv" placeholder="352"/>

                <label for="amount">Payment Amount</label>
                <br>
                <span class="currency">$<input type="number" id="amount" name="amount" placeholder="0.00"/></span>
            </form>

            <input type="submit"></input>
        </div>
        
    </main>
</body>